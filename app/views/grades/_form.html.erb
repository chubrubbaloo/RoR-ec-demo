<%= form_with(model: grade) do |form| %>
  <% if grade.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul>
        <% grade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">


      <div class="row mb-1 mt-4 h-100 justify-content-center align-items-center">
        <div class="col-sm-5">
          <%= form.text_field :code,placeholder: 'Course code', class: 'form-control' %>
        </div>
      </div>



      <div class="row mb-1 mt-4 h-100 justify-content-center align-items-center">
        <div class="col-sm-5">
          <%= form.text_field :course,placeholder: 'Course name', class: 'form-control' %>

        </div>
      </div>


      <div class="row mb-1 mt-4 h-100 justify-content-center align-items-center">
        <div class="col-sm-5">
          <%= form.text_field :points,placeholder: 'Course points',class: 'form-control' %>


        </div>
      </div>

      <div class="row mb-1 mt-4 h-100 justify-content-center align-items-center">
        <div class="col-sm-5">
          <%= form.text_field :grade,placeholder: 'Course grade',class: 'form-control' %>
        </div>
      </div>

      <div class="text-center">
        <%= form.submit class: 'btn btn-primary mt-3 btn-sm'  %> <br>
        <%= link_to 'Cancel', grades_path, class: 'btn btn-warning btn-sm mt-3' %>
      </div>
    </div>
  </div>

<% end %>
