<%= form_with(model: classmate) do |form| %>
  <% if classmate.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(classmate.errors.count, "error") %> prohibited this classmate from being saved:</h2>

      <ul>
        <% classmate.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">


      <div class="row mb-1 mt-4 h-100 justify-content-center align-items-center">
        <div class="col-sm-5">
          <%= form.text_field :first_name, placeholder: 'First name', class: 'form-control' %>
        </div>
      </div>

      <div class="row mb-1 mt-4 h-100 justify-content-center align-items-center">
        <div class="col-sm-5">
          <%= form.text_field :last_name, placeholder: 'Last name', class: 'form-control' %>
        </div>
      </div>


      <div class="row mb-1 mt-4 h-100 justify-content-center align-items-center">
        <div class="col-sm-5">
          <%= form.text_field :email, placeholder: 'Email', class: 'form-control' %>

        </div>
      </div>

      <div class="row mb-1 mt-4 h-100 justify-content-center align-items-center">
        <div class="col-sm-5">
          <%= form.text_field :phone, placeholder: 'Phone', class: 'form-control' %>
        </div>
      </div>

      <div class="text-center">
        <%= form.submit class: 'btn btn-primary mt-3 btn-sm'  %> <br>
        <%= link_to 'Cancel', classmates_path, class: 'btn btn-warning btn-sm mt-3' %>
      </div>
    </div>
  </div>
<% end %>
