<p style="color: green"><%= notice %></p>

<h1>Classmates</h1>

<div id="classmates">
  <% @classmates.each do |classmate| %>
    <% if classmate.user == current_user %>
    <%= render classmate %>
    <p>
      <%= link_to "Show this classmate", classmate %>
    </p>
      <% end %>
  <% end %>
</div>

<%= link_to "New classmate", new_classmate_path %>
