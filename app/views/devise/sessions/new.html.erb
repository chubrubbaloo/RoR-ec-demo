
<img src="" alt="">

<div class="card">
  <div class="card-body">



    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row mb-1 mt-4 h-100 justify-content-center align-items-center">
        <!--<label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>-->
        <div class="col-sm-5">
          <%= f.email_field :email,placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'form-control'%>
        </div>
      </div>

      <div class="row mb-1 mt-4 justify-content-center align-items-center">
        <!--  <label for="inputEmail3" class="col-sm-2 col-form-label ">Email</label>-->
        <div class="col-sm-5">
          <%= f.password_field :password,placeholder: 'Password', autocomplete: "current-password", class: 'form-control' %>

        </div>
      </div>

      <div class="text-center mt-3">
        <%= f.submit "Log in", class: 'btn btn-primary mb-2' %>
      </div>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div class="text-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>
      <% end %>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <div class="text-center">
          <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
        </div>
      <% end %>
      <hr>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="text-center">
          <%= link_to "Sign up!", new_registration_path(resource_name), class: 'btn btn-success' %><br />
        </div>


  </div>
</div>


  <% end %>

<% end %>


